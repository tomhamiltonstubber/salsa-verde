{% extends 'auth.jinja' %}

{% block content %}
  <table class="table table-hover">
    <thead>
      <tr>
        {%- for field in field_names -%}
          <td>{{ field }}</td>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
      {% for link, details in field_data %}
        <tr>
          {%- for field in details -%}
            {% if loop.index == 1 %}
              <td><a href="{{ link }}">{{ field }}</a></td>
            {% else %}
              <td>{{ field }}</td>
            {%- endif -%}
          {% endfor %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
